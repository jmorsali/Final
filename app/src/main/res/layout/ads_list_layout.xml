<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:background="#e6e1e1"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblAdsPersianCreateDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تست"
            android:textDirection="rtl"

            />

        <TextView
            android:id="@+id/lblAdsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="   پارکینگ و انباری
 56 متر با مستاجر و وام کم بهره"
            android:textColor="#5d3422"
            android:textDirection="rtl"
            android:textSize="15dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/lblAdsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lblAdsTitle"
            android:layout_below="@+id/imgAdsPic"
            android:text="320,000,000 تومان"

            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblAdsAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lblAdsPrice"
            android:layout_below="@+id/lblAdsPrice"
            android:paddingTop="15dp"
            android:text="جنت آباد شمالی بعد از تقاطع اول نرسید به تقاطع دم سه متر جلو تر بعد از نانوایی"
            android:textDirection="rtl"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <com.loopj.android.image.SmartImageView
            android:id="@+id/imgAdsPic"
            android:src="@drawable/nopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>



</LinearLayout>